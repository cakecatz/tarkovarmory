#Items {
    text-align: left;

    user-select: text;

    .item-node {
        padding-left: 1rem;
        text-align: left;
    }

    .item-node-name.leaf {
        cursor: pointer;
        &:hover {
            color: DARK_GOLD;
        }
    }

}

#Item-search-container {
    text-align: center;
    padding-top: 1rem;
    padding-bottom: 1rem;
}
.item-node-name {
    img, .image-filler {
        display: inline-block;
        width: 16px;
        height: 16px;
        margin-right: 0.3rem;
    }
}
#Item-search {
    width: 40rem;
    max-width: calc(100vw - 1rem);
    margin: 0;
}

#Items-results-backpack-split {
    display: flex;
    flex-wrap: wrap;


    #Items-search-results {
        flex: 1;
        flex-shrink: 1;
        flex-grow: 1;
        min-width: 15rem;
        margin-bottom: 2rem;
    }
    #Items-selected-backpack-split {
        flex: 1;
        flex-shrink: 1;
        flex-grow: 1;
        min-width: 15rem;
    }
    width: 100vw;
}


.Item {
    //min-width: 30rem;
    max-width: 100vw;

    img {
        float: right;
        max-width: 96px;
        max-height: 96px;
    }

    .item-attribute {
        .attr {
            display: inline-block;
            width: 10rem;
        }
        .value {
        }
    }

}

#Items-backpack {
    margin-top: 1rem;
    //min-width: 20rem;
    max-width: 100vw;
    border: 1px solid DARK_GOLD;
    padding: 0.1rem;

    .backpack-label {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
        background-color: DIM_DARK_GOLD;
        height: 2.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .backpack-item {
        display: flex;
        padding-left: 1rem;
        padding-right: 1rem;

        .remove {
            display: inline-block;
            flex-shrink: 0;
            flex-grow: 0;
            width: 2rem !important;

            .remove-button {
                padding: 0.1rem;
                width: 1rem;
                height: 1.1rem;
                display: inline-block;
                text-align: center;
                background-color: DIM_DARK_GOLD;
                border: 1px solid DARK_GOLD;

                &:hover {
                    background-color: lighten(DIM_DARK_GOLD, 10%);
                    border: 1px solid lighten(DARK_GOLD, 10%);
                }


            }
        }

        &.leaf {
            cursor: pointer;
            &:hover {
                color: DARK_GOLD;
            }
        }

        .slot-price {
            display: inline-block;
            flex-shrink: 0;
            flex-grow: 0;
            width: 7rem;
            text-align: right;
            padding-right: 1rem;
        }

        .name {
            flex-shrink: 1;
            flex-grow: 1;
        }
    }

}
