DARK_GOLD = #9a8866;
DIM_DARK_GOLD = #5A503C;
WHITE = #aeaeb0;
BLACK = #0e0e0e;


html {
    touch-action: manipulation;
}

*::-webkit-scrollbar {
    width: 1em;
}
 
*::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
}
 
*::-webkit-scrollbar-thumb {
  background-color: DIM_DARK_GOLD;
  outline: 1px solid DARK_GOLD;
}



@font-face {
    font-family: "Bender";
    font-display: swap;
    src: embedurl("../assets/fonts/JovannyLemonad-Bender.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
}

* {
    margin: 0;
    padding: 0;
    border: 0;
    font: inherit;
    font-size: 100%;
    vertical-align: baseline;
    -webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

html, body {
    background-color: BLACK;
    color: WHITE;
    font-family: "Bender";
    font-weight: 400;
    height: 100%;
	text-align:center;
	text-shadow: 1px 1px 1px rgba(0,0,0,0.004) !important;
    width: 100%;
	letter-spacing: 0.03em;
    user-select: none;

}

body {
    font-size: 14pt;
}

h1, h2, h3, h4, h5, h6 {
    font-family: 'Bender';
    color: DARK_GOLD;
}
h2 { 
    font-size: 16pt;
}
h1 { 
    font-size: 24pt;
}


.bender {
    font-family: "Bender";
}

a {
    padding-left: 0.5rem;
    padding-right: 0.5rem;
    padding-top: 0.3rem;
    padding-bottom: 0.3rem;
    color: DARK_GOLD;
    text-decoration: none;
    border: 1px solid transparent;
    border-radius: .2rem;
}

a:hover, a.active {
    border: 1px solid darken(DARK_GOLD, 50%);
    background-color: DARK_GOLD;
    color: BLACK;
}


.rotated-title-table {
    th.tilted {
        min-width: 4rem;
        position: relative;
        padding-bottom: 1.7em;

        span {
            display: inline-block;
            margin: auto;
            bordeer-bottom: 1px solid #030;
            span {
                display: block;
                position: absolute;
                white-space: nowrap;
                transform-origin: 1rem 0;
                transform: rotate(-35deg);
            }
        }
    }
}

.horizontal-scroll {
    overflow-y: auto;
    max-width: 100vw;
}

table {
    border-collapse: collapse;
    td {
        padding: 0.2rem;
    }

    tr.selected {
        background-color: DIM_DARK_GOLD;
    }

    th.spacer {
        width: 6rem;
        min-width: 6rem;
    }

    th.smallspacer {
        width: 2rem;
        min-width: 2rem;
    }
}


select {
    -webkit-appearance: none;
    background-color: DIM_DARK_GOLD;
    text-align: center;
    color: WHITE;
    padding-right: 0.5rem;
    padding-left: 0.5rem;
    cursor: pointer;

    &:focus {
    }

    option {
        text-align: center;
    }
}

input {
    background-color: darken(DIM_DARK_GOLD, 70%);
    text-align: left;
    color: WHITE;
    padding: 0.5rem;
    font-size: 16pt;

    &:focus {
    }

    option {
        text-align: center;
    }
}



.translate-icon {
    background-image: svg-load("../assets/translate.svg");
    width: 34px;
    height: 28px;
    display: inline-block;
    background-size: cover;
    margin-right: 0.5rem;
}

.info-icon {
    background-image: svg-load("../assets/info.svg");
    width: 18px;
    height: 18px;
    display: inline-block;
    background-size: cover;
    margin-left: 0.5rem;
}

.question-icon {
    background-image: svg-load("../assets/question.svg");
    width: 18px;
    height: 18px;
    display: inline-block;
    background-size: cover;
    margin-left: 0.5rem;
}

.clickable {
    cursor: pointer;
}

button {
    background-color: DIM_DARK_GOLD;
    border: 1px solid DARK_GOLD;
    padding: 0.2rem;
    padding-left: 0.5rem;
    padding-right: 0.5rem;
    color: WHITE;
    cursor: pointer;

    &:hover {
        background-color: lighten(DIM_DARK_GOLD, 10%);
        border: 1px solid lighten(DARK_GOLD, 10%);
        color: #ddd;
    }
}

.center {
    text-align: center;
}

.space-after {
    margin-bottom: 0.5rem;
}

.numeric {
    text-align: right;
}

@require "./[A-Z]*.styl"; 
