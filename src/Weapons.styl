#Weapons {
    select {
        max-width: 100vw;
        text-align: left;
    }

    text-align: center;
    .weapon-select {
        margin-top: 5rem;
        font-size: 2rem;
    }

    .aggregate-attributes {
    }

    .main-slots {
        margin: auto;
        white-space: nowrap;
        padding-top: 8rem;
        text-align: left;
        padding-bottom: 4rem;
        th {
            text-align: center;
        }
        td, th {
            min-width: 4rem;
        }
    }

    .slots {
        margin-left: 2rem;
        img {
            display: inline-block;
            width: 32px;
            height: 32px;
        }
    }

    .slot-type {
        display: inline-block;
        min-width: 12rem;
    }

    .indent {
        display: inline-block;
        min-width: 1rem;
        width: 1rem;
    }

    .attributes {
        display: block;
        margin: auto;
        width: 40rem;
        max-width: 100vw;
        text-align: left;
        .calculated-attribute {
            display: inline-block;
            width: 17rem;
            margin-left: 1rem;
            margin-right: 1rem;
            .name {
                display: inline-block;
                width: 12rem;
                text-align: left;
            }
            .value {
                display: inline-block;
                width: 5rem;
                text-align: right;
            }
        }

        .firing-modes {
            margin-top: 0.5rem;
            text-align: center;
        }
    }

    .in-conflict {
        color: red;
    }
}

