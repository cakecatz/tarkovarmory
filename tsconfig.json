{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es5",
        "moduleResolution": "node",
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "src/components/*",
                "src/*"
            ]
        },
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react"
    },
    "files": [
        "./src/client.tsx"
    ]
}
